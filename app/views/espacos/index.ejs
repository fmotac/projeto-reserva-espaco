<h1>Espaços</h1>

<a href="/espacos/novo">Novo Espaço</a>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Capacidade</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
    <% espacos.forEach(espaco => { %>
      <tr>
        <td><%= espaco.Nome %></td>
        <td><%= espaco.Capacidade %></td>
        <td>
          <a href="/espacos/<%= espaco.ID %>/editar">Editar</a>
          <form action="/espacos/<%= espaco.ID %>?_method=DELETE" method="POST" style="display: inline;">
            <button type="submit">Excluir</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>

    <link rel="stylesheet" href="/css/style.css" />
    <link
    
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>

    
  </head>
  <body>
    <div class="container">
      <h1>Manter Espaços</h1>

      
      <table>
        <thead>
          <tr><td><a href="/espacos/novo" class="btn btn-success">Novo Espaço</a></td></tr>
          <tr>
            <th>Nome</th>
            <th>Capacidade</th>
            <th>Ações</th>
          </tr>
        </thead>
        <tbody>
          <% espacos.forEach(espaco => { %>
          <tr>
            <td><%= espaco.Nome %></td>
            <td><%= espaco.Capacidade %></td>
            <td>
              <a href="/espacos/<%= espaco.ID %>/editar" class="btn btn-secondary">Editar</a>
              <form
                action="/espacos/<%= espaco.ID %>?_method=DELETE"
                method="POST"
                style="display: inline"
              >
             
                <button type="submit" 
                style="background-color: rgb(148, 37, 37); border-radius: 5px;"
                onclick="return confirm('Tem certeza que deseja excluir este espaço?');">Excluir</button>
              </form>
              </form>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </body>
</html>
